<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/blue"
            android:gravity="center">

            <TextView
                android:id="@+id/appName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ENVIRONMENTAL SENSING"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="24sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:text="Humidity: "></TextView>

        <TextView
            android:id="@+id/humidValue"
            android:layout_width="349dp"
            android:layout_height="24dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_marginLeft="25dp" />

        <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/line_chart"
        android:layout_marginTop="-14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        </com.github.mikephil.charting.charts.LineChart>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="Humidity Chart"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:text="Pressure: "></TextView>

        <TextView
            android:id="@+id/presValue"
            android:layout_width="349dp"
            android:layout_height="24dp"></TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kPa"
                android:layout_marginLeft="25dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart_pres"
                android:layout_marginTop="-14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.github.mikephil.charting.charts.LineChart>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="Pressure Chart"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:text="Temperature: "></TextView>

        <TextView
            android:id="@+id/tempValue"
            android:layout_width="349dp"
            android:layout_height="24dp"></TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Â°C"
                android:layout_marginLeft="25dp" />

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/line_chart_temp"
                android:layout_marginTop="-14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </com.github.mikephil.charting.charts.LineChart>

        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="13sp"
        android:text="Temperature Chart"></TextView>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/widgetLayout"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/black"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/logo_uet"></ImageView>

            <TextView
                android:layout_width="322dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="ENVIROMENTAL SENSOR"
                android:layout_marginLeft="12dp"
                android:textSize="20sp">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dateTimeDisplay"
            android:textSize="18sp"
            android:gravity="center">
        </TextView>
    </LinearLayout>

</FrameLayout>

